# npm 설정 파일 - Railway 배포 최적화
# 펀딩 메시지 비활성화
fund=false

# 감사(audit) 자동 실행 비활성화
audit=false

# 진행 상황 표시 비활성화 (CI/CD 환경에서 깔끔한 로그)
progress=false

# 레지스트리 설정
registry=https://registry.npmjs.org/

# 캐시 설정 (Railway 환경에서 안전한 위치)
cache=/tmp/.npm

# 로그 레벨 설정 (에러만 표시)
loglevel=error

# 설치 시 package-lock.json 파일 강제 사용
package-lock=true

# npm ci 명령어 사용 시 더 안정적인 설치
ci=true